@if $elementId != false {
	.shop-description-$elementId .term-description p {
		@if $despFontSize != false {
			font-size: $despFontSize;
		}
		@if $despFontWeight != false {
			font-weight: $despFontWeight;
		}
		@if $despLineHeight != false {
			line-height: $despLineHeight;
		}
		@if $despLetterSpacing != false {
			letter-spacing: $despLetterSpacing;
		}
		@if $descriptionColor != false {
			color: $descriptionColor;
		}
	}
}
